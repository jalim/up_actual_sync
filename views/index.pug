head
  meta(charset='utf-8')
  title Config
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')

  body
    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            button.close(type="button", data-dismiss="modal")
              span(aria-hidden="true") Ã—
              span.sr-only Close
            h4#myModalLabel.modal-title
              | Configure UP Actual Sync
          // Modal Body
          .modal-body
            form(role='form' method='POST' action='/')
              div.form-group
                label(for='token') UP Token:
                input#token.form-control(type='text', placeholder='UP API Token' name='token' value=token)
              div.form-group
                label(for='budgetId') Actual Budget ID:
                input#budgetId.form-control(type='text', placeholder='Actual Budget ID' name='budgetId' value=actual.budgetId)
              div.form-group
                label(for='serverUrl') Actual Server URL:
                input#serverUrl.form-control(type='url', placeholder='https://actual.mydomain.com' name='serverUrl' value=actual.serverUrl)
              div.form-group
                label(for='serverPassword') Actual Server Password:
                input#serverPassword.form-control(type='password', placeholder='superSneakey' name='serverPassword' value=actual.serverPassword)
              div.form-group
                label(for="budgetEncryption") Budget Encryption Enabled: 
                input(type="checkbox" name='budgetEncryption' checked=actual.budgetEncryption value='true')
              if success
                button.btn.btn-success(type="submit", name="asdf") Save
              else if error
                button.btn.btn-danger(type="submit", name="asdf") Save
              else
                button.btn.btn-primary(type="submit", name="asdf") Save
          // Modal Footer
          .modal-footer
            if success
              h2 Saved
            if error
              h2=error
